# BehavAced Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Required)
# =============================================================================

# Google Gemini API Key - Required for Gemini AI model
# Get your API key from: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API Key (commented out - using Gemini instead)
# Get your API key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key - Optional, for alternative AI models
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# Database URL - Optional, for persistent storage
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Supabase Configuration - Optional, for Supabase integration
SUPABASE_URL=
SUPABASE_KEY=

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, or production
ENVIRONMENT=development

# Debug mode: true or false
DEBUG=true

# =============================================================================
# File Upload Settings
# =============================================================================

# Maximum upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Directory for uploaded files
UPLOAD_DIR=uploads

# =============================================================================
# AI Model Configuration
# =============================================================================

# Google Gemini model to use
# Options: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp, etc.
GEMINI_MODEL=gemini-2.5-flash

# Claude model (commented out - using Gemini instead)
# Options: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Maximum tokens for AI responses
MAX_TOKENS=8192

# Temperature for AI responses (0.0 to 1.0)
# Lower = more deterministic, Higher = more creative
TEMPERATURE=0.7
